<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.interstellarstudios.note_ify">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk tools:overrideLibrary="me.aflak.libraries" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter android:label="Note-ify">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Register"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".SignIn"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ForgotPassword"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Notes"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".NotesSortAlphabetical"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".NotesSortPriority"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Search"
            android:label="All Notes"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".GroceryList"
            android:label="Grocery List"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".Account" />
        <activity
            android:name=".NewNote"
            android:label=""
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".Bin"
            android:label="Bin"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".EditNote"
            android:label=""
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".NewCollection"
            android:label="New Folder"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".Settings" />
        <activity android:name=".FingerprintLogin" />
        <activity
            android:name=".SharedSortAlphabetical"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".SharedSortPriority"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".MoveSelectFolder"
            android:label="Move Note" />
        <activity
            android:name=".Home"
            android:label="Folders"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Themes"
            android:label="Themes" />
        <activity android:name=".Information" />
        <activity
            android:name=".FAQ"
            android:label="FAQ" />
        <activity
            android:name=".Share"
            android:label="Share"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".SharedGroceryList"
            android:label="Shared Grocery List"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="com.interstellarstudios.note_ify.FirebasePushNotifications.TARGETNOTIFICATION2" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Shared"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="com.interstellarstudios.note_ify.FirebasePushNotifications.TARGETNOTIFICATION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notification" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.interstellarstudios.note_ify.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <receiver
            android:name=".AlertReceiver"
            android:enabled="true" />

        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>