<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Themes">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dark_theme_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Dark Theme"
        android:textColor="@color/colorLightThemeText"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/switchThemes"
        app:layout_constraintStart_toEndOf="@+id/dark_icon"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/dark_theme_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Change the colour scheme of the app to a dark theme"
        android:textColor="@color/colorLightThemeText"
        app:layout_constraintEnd_toStartOf="@+id/switchThemes"
        app:layout_constraintStart_toStartOf="@+id/dark_theme_text"
        app:layout_constraintTop_toBottomOf="@+id/dark_theme_text" />

    <Switch
        android:id="@+id/switchThemes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/dark_theme_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dark_theme_text" />

    <ImageView
        android:id="@+id/dark_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/dark_theme_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dark_theme_text"
        app:srcCompat="@drawable/ic_dark_black" />

</androidx.constraintlayout.widget.ConstraintLayout>