<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/note_image_overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transparent_overlay_primary_light"
    android:visibility="visible"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textView_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Gallery"
        android:textColor="@color/colorLightThemeText"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fab_gallery"
        app:layout_constraintEnd_toEndOf="@+id/fab_gallery"
        app:layout_constraintStart_toStartOf="@+id/fab_gallery" />

    <TextView
        android:id="@+id/textView_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Camera"
        android:textColor="@color/colorLightThemeText"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fab_camera"
        app:layout_constraintEnd_toEndOf="@+id/fab_camera"
        app:layout_constraintStart_toStartOf="@+id/fab_camera" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fab_gallery"
        app:srcCompat="@drawable/ic_camera_white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fab_camera"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_image_white" />

</androidx.constraintlayout.widget.ConstraintLayout>